  const icons: Record<string, string> = {
    cyclone: "ğŸŒªï¸",
    flood: "ğŸŒŠ",
    fire: "ğŸ”¥",
    earthquake: "ğŸŒ",
    storm: "â›ˆï¸",
    drought: "ğŸœï¸",
    volcano: "ğŸŒ‹",
  };
  
  return icons[category.toLowerCase()] || "âš ï¸";
